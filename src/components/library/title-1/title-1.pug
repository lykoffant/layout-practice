//-
  options.text            - title text (string)
  options.vissuallyHidden - enable/disable available title hiding (boolean)
  options.lang            - title language (string)

mixin title-1(options)
  if !options
    - options = {};

  -
    var classes = '';
    classes += options.visuallyHidden ? 'title-1_visually-hidden' : '';

  h1.title-1(class=classes, lang=options.lang)= options.text
