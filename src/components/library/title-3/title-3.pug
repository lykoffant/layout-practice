//-
  options.text            - block text (string)
  options.vissuallyHidden - enable/disable available block hiding (boolean)
  options.attributes      - attributes (Object)

mixin title-3(options)
  if !options
    - options = {};

  -
    let classes = [];

    if (options.visuallyHidden === true) {
      classes.push('title-3_visually-hidden');
    }

  h2.title-3(class=classes)&attributes(options.attributes)= options.text
