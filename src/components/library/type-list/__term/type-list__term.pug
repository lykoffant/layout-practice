//-
  options.text  - term text (string)
  options.lang  - term language (string)
  options.theme - term theme (string)
  options.mixes - an array of mix names (Array<string>)

mixin type-list__term(options)
  if !options
    - options = {};

  -
    let classes = [];

    if (options.theme === 'body') {
      classes.push('type-list__term_theme_body')
    }

    if (options.mixes.length !== 0) {
      classes = classes.concat(options.mixes)
    }

  dt.type-list__term(
    class=classes
    lang=options.lang
  )= options.text
