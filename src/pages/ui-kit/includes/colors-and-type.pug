      typeList: [
        {
          termOptions: {
            text: 'h1',
            attributes: {'class': 'title-1'},
          },
          detailsOptions: {
            text: 'This one is the sub-section or widget title',
            attributes: {'class': 'title-1'},
          },
        },
        {
          termOptions: {
            text: 'h2',
            attributes: {'class': 'title-2'},
          },
          detailsOptions: {
            text: 'Next one is the item title inside widgets',
            attributes: {'class': 'title-2'},
          },
        },
        {
          termOptions: {
            text: 'h3',
            attributes: {'class': 'title-3'},
          },
          detailsOptions: {
            text: 'This is a label or CTA text',
            attributes: {'class': 'title-3'},
          },
        },
        {
          termOptions: {
            text: 'body',
            theme: 'body',
            attributes: {'class': 'body'},
