      colorList: [
        {colorNameOptions: {colorName: 'Dark Shade 100%'}},
        {colorNameOptions: {colorName: 'Dark Shade 75%'}},
        {colorNameOptions: {colorName: 'Dark Shade 50%'}},
        {colorNameOptions: {colorName: 'Dark Shade 25%'}},
