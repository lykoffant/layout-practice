include /components/library/body/body
include /components/library/main/main
include /components/library/title-1/title-1
include /components/library/title-2/title-2
include /components/library/title-3/title-3
include /components/library/demo-section/demo-section
include /components/library/grid-of-colors-and-type/grid-of-colors-and-type
include /components/library/color-list/color-list
include /components/library/type-list/type-list

include /components/library/grid-of-form-elements/grid-of-form-elements
include /components/library/container/container

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    title UI kit
  +body({pixelPerfectDesign: false})
    +main
      +title-1({ text: 'UI kit demo', visuallyHidden: true })

      +demo-section({
        theme: 'colors-and-type',
        attributes: {
          'class': ['main__section'],
        },
      })
        +title-2({text: 'Colors & Type', visuallyHidden: true})
        +grid-of-colors-and-type
          +color-list({
            colorList: [
              {colorNameOptions: {colorName: 'Dark Shade 100%'}},
              {colorNameOptions: {colorName: 'Dark Shade 75%'}},
              {colorNameOptions: {colorName: 'Dark Shade 50%'}},
              {colorNameOptions: {colorName: 'Dark Shade 25%'}},
              {colorNameOptions: {colorName: 'Dark Shade 5%'}},
              {colorNameOptions: {colorName: 'Purple'}},
              {colorNameOptions: {colorName: 'Green'}},
            ],
          })
          +type-list({
            typeList: [
              {
                term: {
                  text: 'h1',
                  mixes: ['title-1'],
                },
                details: {
                  text: 'This one is the sub-section or widget title',
                  mixes: ['title-1'],
                },
              },
              {
                term: {
                  text: 'h2',
                  mixes: ['title-2'],
                },
                details: {
                  text: 'Next one is the item title inside widgets',
                  mixes: ['title-2'],
                },
              },
              {
                term: {
                  text: 'h3',
                  mixes: ['title-3'],
                },
                details: {
                  text: 'This is a label or CTA text',
                  mixes: ['title-3'],
                },
              },
              {
                term: {
                  text: 'body',
                  theme: 'body',
                  mixes: ['body'],
                },
                details: {
                  text: 'This is the body text which is used for \
                          most of the design, like paragraphs, lists, etc.',
                  mixes: ['body'],
                },
              },
            ]
          })

      +demo-section({
        theme: 'form-elements',
        attributes: {
          'class': ['main__section'],
        },
      })
        +title-2({text: 'Form Elements', visuallyHidden: true})
        +grid-of-form-elements
          +container({mixes: ['grid-of-from-elements__container-1']})
          +container({mixes: ['grid-of-from-elements__container-2']})
          +container({mixes: ['grid-of-from-elements__container-3']})
          +container({mixes: ['grid-of-from-elements__container-4']})
          +container({mixes: ['grid-of-from-elements__container-5']})
          +container({mixes: ['grid-of-from-elements__container-6']})
          +container({mixes: ['grid-of-from-elements__container-7']})
          +container({mixes: ['grid-of-from-elements__container-8']})
          +container({mixes: ['grid-of-from-elements__container-9']})
          +container({mixes: ['grid-of-from-elements__container-10']})
          +container({mixes: ['grid-of-from-elements__container-11']})

      +demo-section({
        theme: 'cards',
        attributes: {
          'class': ['main__section'],
        },
      })
        +title-2({text: 'Cards', visuallyHidden: true})

      +demo-section({
        theme: 'headers-and-footers',
        attributes: {
          'class': ['main__section'],
        },
      })
        +title-2({text: 'Headers & Footers', visuallyHidden: true})
